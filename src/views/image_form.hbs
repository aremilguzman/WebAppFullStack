<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <form action="/images/add" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" name="tittle" class="form-control" placeholder="Image Tittle">
                    </div>
                    <div class="form-group">
                        <textarea name="description" class="form-control" placeholder="Image Description"></textarea>
                    </div>
                    <div class="form-group">
      <label for="formFile" class="form-label mt-4">Seleccionar Imagen</label>
      <input type="file" name="image" class="form-control" id="formFile">
    </div>
                    <button class="btn btn-outline-warning">
                        Subir
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>Titulo</th>
                    <th>Descripci√≥n</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each photos}}
                <tr>
                    <td>{{tittle}}</td>
                    <td>{{description}}</td>
                    <td>
                        <a href="{{imageURL}}" target="_blank" class="btn btn-primary">Ver</a>
                        <a href="/images/delete/{{_id}}" class="btn btn-danger">Borrar</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
